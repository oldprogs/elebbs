uses CfgRec, BitWise;

function  Check32(Flags: ByteArray32; Number: Word): Boolean;

(*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-*)
 IMPLEMENTATION
(*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-+-*-*)

function Check32(Flags: ByteArray32; Number: Word): Boolean;
var Row: Integer;
begin
  Check32 := True;

  Row := 01;
  while Number>07 do
    begin
      Inc(Row);
      Dec(Number, 8);
    end; { While }

  if (Row > 32) OR (Row < 1) then Row := 32;

  Check32 := (ReadBit(Flags[Row], Number));
end; { func. Check32 }

